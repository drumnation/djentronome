{
  "name": "@djentronome/game-core",
  "version": "0.1.0",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules",
    "format": "prettier --check \"**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "turbo run test --filter={@djentronome/game-core}",
    "test:unit": "vitest run --config @kit/testing/unit",
    "test:integration": "vitest run --config @kit/testing/integration",
    "test:e2e": "vitest run --config @kit/testing/e2e",
    "test:e2e:browser": "playwright test --config @kit/testing/playwright"
  },
  "devDependencies": {
    "@kit/tsconfig": "workspace:*",
    "@kit/eslint-config": "workspace:*",
    "@kit/prettier-config": "workspace:*",
    "@kit/testing": "workspace:*"
  },
  "dependencies": {
    "@djentronome/game-loop": "workspace:*",
    "@djentronome/collision": "workspace:*",
    "@djentronome/input": "workspace:*",
    "@djentronome/core-audio": "workspace:*",
    "@djentronome/core-graphics": "workspace:*",
    "@djentronome/core-logic": "workspace:*"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kit/eslint-config/base"
    ]
  },
  "prettier": "@kit/prettier-config"
} 