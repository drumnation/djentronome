{
  "extends": "./tooling/typescript/base.json",
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.tsx",
    "./scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.d.ts",
    "**/dist/**",
    "**/.turbo/**",
    "./apps/**"
  ],
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "isolatedModules": true
  }
} 